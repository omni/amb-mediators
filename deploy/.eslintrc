{
  "extends": [
    "plugin:node/recommended",
    "airbnb-base",
    "plugin:prettier/recommended"
  ],
  "plugins": ["node"],
  "rules": {
    "no-var": "error",
    "consistent-return": "off",
    "global-require": "off",
    "no-console": "off",
    "no-plusplus": "off",
    "no-use-before-define": ["error", { "functions": false }],
    "import/no-extraneous-dependencies": "off",
    "node/no-unpublished-require": "off"
  }
}
